{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "tsconfigRootDir": ".",
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "plugins": ["@typescript-eslint", "react", "react-hooks", "unused-imports"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:prettier/recommended",
    "@tanstack/eslint-plugin-query"
  ],
  "rules": {
    /* ğŸš« Prohibir any explÃ­cito */
    "@typescript-eslint/no-explicit-any": "error",

    /* ğŸš« Bloquea usos inseguros asociados a any implÃ­cito */
    "@typescript-eslint/no-unsafe-assignment": "error",
    "@typescript-eslint/no-unsafe-call": "error",
    "@typescript-eslint/no-unsafe-member-access": "error",
    "@typescript-eslint/no-unsafe-return": "error",

    /* ğŸš¨ Detectar cualquier parÃ¡metro sin tipo explÃ­cito */
    "@typescript-eslint/typedef": ["error", { "parameter": true }],

    /* ğŸ’¡ Opcional: exigir tipo en retorno de funciones pÃºblicas */
    "@typescript-eslint/explicit-module-boundary-types": [
      "error",
      {
        "allowArgumentsExplicitlyTypedAsAny": false,
        "allowTypedFunctionExpressions": true
      }
    ],

    /* â™»ï¸ EliminaciÃ³n automÃ¡tica de imports sin usar */
    "unused-imports/no-unused-imports": "error",

    /* ğŸ” Variables no usadas */
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],

    /* ğŸ¨ Buenas prÃ¡cticas de cÃ³digo */
    "eqeqeq": ["error", "always"],
    "curly": "error",
    "prefer-const": "error",
    "no-console": "warn",

    /* ğŸ§¹ Estilo de cÃ³digo (Prettier se ocupa del resto) */
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-trailing-spaces": "error",
    "eol-last": ["error", "always"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
